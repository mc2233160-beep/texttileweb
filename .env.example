# Django Secret Key (change this to a new, long, random string in production)
SECRET_KEY="your-super-secret-and-long-random-string"

# Debug mode (should be False in production)
DEBUG="True"

# Allowed Hosts (e.g., "yourdomain.com,www.yourdomain.com")
ALLOWED_HOSTS="*"

# ----------------------------------
# DATABASE CONFIGURATION
# ----------------------------------
# Option 1: Use a single DATABASE_URL string (recommended for services like Render/Heroku)
# Example for PostgreSQL: DATABASE_URL="postgres://USER:PASSWORD@HOST:PORT/NAME"
# Example for MySQL: DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/NAME"
DATABASE_URL="postgres://user:password@localhost/dbname"

# Option 2: Define individual database components (if your host requires it)
# DB_ENGINE="django.db.backends.postgresql"
# DB_NAME="your_db_name"
# DB_USER="your_db_user"
# DB_PASSWORD="your_db_password"
# DB_HOST="your_db_host"
# DB_PORT="5432"

